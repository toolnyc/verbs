---
import type { Event, TicketTier, DJ } from '../../lib/supabase';
import TicketTierButton from './TicketTier.astro';

interface Props {
  event: Event;
  tiers: TicketTier[];
  djs: DJ[];
}

const { event, tiers, djs } = Astro.props;

const eventDate = new Date(event.date);
const isPast = eventDate < new Date();

const formattedDate = eventDate.toLocaleDateString('en-US', {
  weekday: 'long',
  month: 'long',
  day: 'numeric',
});

const formattedTime = eventDate.toLocaleTimeString('en-US', {
  hour: 'numeric',
  minute: '2-digit',
});

const formattedYear = eventDate.getFullYear();
---

<section class="hero" class:list={{ past: isPast }}>
  <div class="container">
    <header class="hero-header">
      <p class="date text-uppercase text-sm">{formattedDate} {formattedYear}</p>
      <h1 class="title">{event.title}</h1>
    </header>

    <div class="hero-content">
      <div class="hero-info">
        <div class="venue">
          <p class="venue-name text-2xl">{event.venue_name}</p>
          <p class="venue-city text-muted">{event.venue_city}</p>
          {event.venue_link && (
            <a href={event.venue_link} target="_blank" rel="noopener" class="text-sm">
              View map
            </a>
          )}
        </div>

        <div class="time">
          <p class="text-lg">{formattedTime}</p>
          {event.time_end && (
            <p class="text-muted text-sm">
              until {new Date(event.time_end).toLocaleTimeString('en-US', {
                hour: 'numeric',
                minute: '2-digit',
              })}
            </p>
          )}
        </div>

        {djs.length > 0 && (
          <div class="lineup">
            <p class="text-uppercase text-xs text-muted mb-sm">Lineup</p>
            <ul class="dj-list">
              {djs.map(dj => (
                <li class="dj-name text-lg">{dj.name}</li>
              ))}
            </ul>
          </div>
        )}

        {event.description && (
          <div class="description mt-xl">
            <p>{event.description}</p>
          </div>
        )}
      </div>

      <div class="hero-tickets">
        {event.image_url && (
          <img src={event.image_url} alt={event.title} class="event-image" />
        )}

        {!isPast && tiers.length > 0 && (
          <div class="tickets">
            {tiers.map(tier => (
              <TicketTierButton tier={tier} eventId={event.id} />
            ))}
          </div>
        )}

        {isPast && (
          <p class="text-muted text-sm">This event has passed</p>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: var(--space-3xl) 0;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  .hero.past {
    min-height: auto;
    opacity: 0.5;
  }

  .hero-header {
    margin-bottom: var(--space-2xl);
  }

  .date {
    margin-bottom: var(--space-sm);
  }

  .title {
    font-size: var(--text-7xl);
    line-height: 0.95;
    max-width: 12ch;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .venue-name {
    font-weight: 500;
  }

  .dj-list {
    list-style: none;
  }

  .dj-name {
    padding: var(--space-xs) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .dj-name:last-child {
    border-bottom: none;
  }

  .hero-tickets {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .event-image {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
  }

  .tickets {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
</style>
