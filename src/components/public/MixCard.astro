---
import type { Mix } from '../../lib/supabase';

interface Props {
  mix: Mix;
}

const { mix } = Astro.props;

const formatDuration = (seconds: number | null) => {
  if (!seconds) return '';
  const mins = Math.floor(seconds / 60);
  const secs = seconds % 60;
  return `${mins}:${secs.toString().padStart(2, '0')}`;
};
---

<article class="mix-card card-hover" data-mix-id={mix.id} data-audio-url={mix.audio_url}>
  <div class="cover-wrapper img-hover-reveal">
    {mix.cover_image_url ? (
      <img src={mix.cover_image_url} alt={mix.title} class="cover" />
    ) : (
      <div class="cover cover-placeholder">
        <span class="placeholder-text">Mix</span>
      </div>
    )}
    <button class="play-btn" aria-label="Play">
      <span class="play-icon">Play</span>
      <span class="pause-icon" style="display: none;">Pause</span>
    </button>
  </div>

  <div class="mix-info">
    <h3 class="mix-title">{mix.title}</h3>
    {mix.description && (
      <p class="mix-description text-sm">{mix.description}</p>
    )}
    {mix.duration_seconds && (
      <p class="mix-duration text-xs">{formatDuration(mix.duration_seconds)}</p>
    )}
  </div>
</article>

<style>
  .mix-card {
    display: flex;
    flex-direction: column;
    width: 280px;
    color: var(--color-bg);
  }

  .cover-wrapper {
    position: relative;
    aspect-ratio: 1;
    background: rgba(255, 255, 255, 0.1);
  }

  .cover-wrapper::after {
    background: rgba(255, 255, 255, 0.1);
  }

  .cover {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cover-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.3);
  }

  .placeholder-text {
    font-size: var(--text-lg);
    font-weight: 500;
  }

  .play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: var(--space-sm) var(--space-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-blue);
    color: var(--color-bg);
    border: 1px solid var(--color-blue);
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease, background 0.15s ease;
    z-index: 2;
    font-size: var(--text-sm);
  }

  .play-btn:hover {
    background: transparent;
    color: var(--color-blue);
  }

  .cover-wrapper:hover .play-btn,
  .mix-card.playing .play-btn {
    opacity: 1;
  }

  .play-btn:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  .mix-info {
    padding: var(--space-lg) 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .mix-title {
    font-size: var(--text-lg);
    font-weight: 500;
    line-height: 1.2;
  }

  .mix-description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    opacity: 0.7;
  }

  .mix-duration {
    opacity: 0.5;
    margin-top: var(--space-xs);
  }

  .mix-card.playing .play-icon {
    display: none;
  }

  .mix-card.playing .pause-icon {
    display: block;
  }

  @media (max-width: 480px) {
    .mix-card {
      width: 240px;
    }
  }
</style>

<script>
  // Use event delegation to handle play clicks - survives ViewTransitions
  function handleMixCardClick(e: Event) {
    const target = e.target as HTMLElement;
    const playBtn = target.closest('.play-btn');
    if (!playBtn) return;

    const card = playBtn.closest('.mix-card') as HTMLElement;
    if (!card) return;

    e.preventDefault();
    const mixId = card.dataset.mixId;
    window.dispatchEvent(new CustomEvent('playMix', { detail: { mixId } }));
  }

  // Only add listener once using a flag on document
  if (!(document as any).__mixCardListenerAdded) {
    document.addEventListener('click', handleMixCardClick);
    (document as any).__mixCardListenerAdded = true;
  }
</script>
