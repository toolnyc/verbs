---
import { Font } from 'astro:assets';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/admin', label: 'Home' },
  { href: '/admin/events', label: 'Events' },
  // MVP: Mix functionality gated - uncomment to re-enable
  // { href: '/admin/mixes', label: 'Mixes' },
  { href: '/admin/djs', label: 'DJs' },
  { href: '/admin/newsletter', label: 'Email' },
];

function isActive(href: string) {
  if (href === '/admin') return currentPath === '/admin';
  return currentPath.startsWith(href);
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <Font cssVariable="--font-sans" preload />
    <title>{title} | VERBS Admin</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div class="admin-layout">
      <!-- Desktop sidebar -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <a href="/" class="logo">VERBS</a>
        </div>

        <nav class="sidebar-nav">
          {navItems.map(item => (
            <a
              href={item.href}
              class:list={['nav-item', { active: isActive(item.href) }]}
            >
              {item.label}
            </a>
          ))}
        </nav>

        <div class="sidebar-footer">
          <a href="/" class="back-to-site">Back to Site</a>
          <form action="/admin/logout" method="POST">
            <button type="submit" class="logout-btn">Log out</button>
          </form>
        </div>
      </aside>

      <!-- Mobile header (only visible on mobile) -->
      <header class="mobile-header">
        <a href="/" class="mobile-logo">VERBS</a>
        <button class="menu-toggle" aria-label="Toggle menu">
          Menu
        </button>
      </header>

      <!-- Full screen mobile menu (hidden until opened) -->
      <div class="mobile-menu" id="mobile-menu">
        <button class="menu-close" aria-label="Close menu">Close</button>
        <nav class="mobile-nav">
          {navItems.map(item => (
            <a
              href={item.href}
              class:list={['mobile-nav-item', { active: isActive(item.href) }]}
            >
              {item.label}
            </a>
          ))}
        </nav>
        <div class="mobile-menu-footer">
          <a href="/" class="mobile-back-link">Back to Site</a>
          <form action="/admin/logout" method="POST">
            <button type="submit" class="mobile-logout-btn">Log out</button>
          </form>
        </div>
      </div>

      <main class="main-content">
        <header class="page-header">
          <h1 class="page-title">{title}</h1>
        </header>

        <div class="page-content">
          <slot />
        </div>
      </main>
    </div>

    <script>
      const menuToggle = document.querySelector('.menu-toggle');
      const menuClose = document.querySelector('.menu-close');
      const mobileMenu = document.getElementById('mobile-menu');

      menuToggle?.addEventListener('click', () => {
        mobileMenu?.classList.add('open');
        document.body.style.overflow = 'hidden';
      });

      menuClose?.addEventListener('click', () => {
        mobileMenu?.classList.remove('open');
        document.body.style.overflow = '';
      });

      // Close menu when clicking a link
      document.querySelectorAll('.mobile-nav-item').forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu?.classList.remove('open');
          document.body.style.overflow = '';
        });
      });
    </script>
  </body>
</html>

<style is:global>
  /* Desktop layout */
  .admin-layout {
    display: grid;
    grid-template-columns: 240px 1fr;
    min-height: 100vh;
  }

  /* Desktop sidebar */
  .sidebar {
    background: var(--color-fg);
    color: var(--color-bg);
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    position: sticky;
    top: 0;
    height: 100vh;
  }

  /* Hide mobile elements on desktop */
  .mobile-header,
  .mobile-menu {
    display: none !important;
  }

  /* Mobile layout */
  @media (max-width: 768px) {
    .admin-layout {
      display: block;
    }

    /* Hide sidebar on mobile */
    .sidebar {
      display: none !important;
    }

    /* Show mobile header */
    .mobile-header {
      display: flex !important;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 56px;
      background: var(--color-fg);
      color: var(--color-bg);
      padding: 0 var(--space-md);
      align-items: center;
      justify-content: space-between;
      z-index: 100;
    }

    /* Mobile menu - only show when open */
    .mobile-menu {
      display: none !important;
    }

    .mobile-menu.open {
      display: flex !important;
      position: fixed;
      inset: 0;
      background: var(--color-fg);
      color: var(--color-bg);
      z-index: 200;
      flex-direction: column;
      padding: var(--space-xl);
    }
  }

  /* Mobile header styles */
  .mobile-logo {
    font-size: var(--text-lg);
    font-weight: 700;
    color: inherit;
    text-decoration: none;
  }

  .mobile-logo::after {
    display: none;
  }

  .menu-toggle {
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-sm) var(--space-md);
    color: var(--color-bg);
    font-size: var(--text-sm);
    font-weight: 700;
  }

  .menu-toggle:hover {
    background: transparent;
    opacity: 0.7;
  }

  /* Mobile menu styles */
  .menu-close {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    background: transparent;
    border: none;
    color: var(--color-bg);
    font-size: var(--text-sm);
    font-weight: 700;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-sm) var(--space-md);
  }

  .menu-close:hover {
    background: transparent;
    opacity: 0.7;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-top: var(--space-3xl);
    flex: 1;
  }

  .mobile-nav-item {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: inherit;
    text-decoration: none;
    opacity: 0.7;
    padding: var(--space-sm) 0;
  }

  .mobile-nav-item::after {
    display: none;
  }

  .mobile-nav-item:hover,
  .mobile-nav-item.active {
    opacity: 1;
  }

  .mobile-menu-footer {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding-top: var(--space-xl);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .mobile-back-link {
    color: inherit;
    text-decoration: none;
    font-size: var(--text-sm);
    opacity: 0.7;
  }

  .mobile-back-link::after {
    display: none;
  }

  .mobile-back-link:hover {
    opacity: 1;
  }

  .mobile-logout-btn {
    width: 100%;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: inherit;
    font-size: var(--text-sm);
    padding: var(--space-sm) var(--space-md);
    cursor: pointer;
    font-weight: 700;
  }

  .mobile-logout-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .sidebar-header {
    margin-bottom: var(--space-2xl);
  }

  .sidebar-header .logo {
    font-size: var(--text-lg);
    font-weight: 700;
    color: inherit;
    text-decoration: none;
  }

  .sidebar-header .logo::after {
    display: none;
  }

  .sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    flex: 1;
  }

  .nav-item {
    display: block;
    padding: var(--space-sm) var(--space-md);
    color: inherit;
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: 700;
    opacity: 0.7;
    transition: opacity 0.15s, background 0.15s;
    border-radius: 2px;
  }

  .nav-item::after {
    display: none;
  }

  .nav-item:hover {
    opacity: 1;
    background: rgba(255, 255, 255, 0.1);
  }

  .nav-item.active {
    opacity: 1;
    background: rgba(255, 255, 255, 0.15);
  }

  .sidebar-footer {
    margin-top: auto;
    padding-top: var(--space-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .back-to-site {
    color: inherit;
    text-decoration: none;
    font-size: var(--text-sm);
    opacity: 0.7;
  }

  .back-to-site::after {
    display: none;
  }

  .back-to-site:hover {
    opacity: 1;
  }

  .logout-btn {
    width: 100%;
    background: transparent;
    border-color: rgba(255, 255, 255, 0.3);
    color: inherit;
    font-size: var(--text-sm);
  }

  .logout-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
    color: inherit;
  }

  /* Main content */
  .main-content {
    padding: var(--space-xl);
    background: var(--color-bg-alt);
    min-height: 100vh;
  }

  @media (max-width: 768px) {
    .main-content {
      padding: var(--space-md);
      padding-top: calc(56px + var(--space-md));
    }
  }

  .page-header {
    margin-bottom: var(--space-xl);
  }

  .page-title {
    font-size: var(--text-2xl);
    font-weight: 700;
  }

  /* Admin form styles */
  .admin-form {
    background: var(--color-bg);
    padding: var(--space-xl);
    max-width: 800px;
  }

  .form-group {
    margin-bottom: var(--space-lg);
  }

  .form-label {
    display: block;
    font-size: var(--text-sm);
    font-weight: 500;
    margin-bottom: var(--space-xs);
  }

  .form-hint {
    font-size: var(--text-xs);
    color: var(--color-muted);
    margin-top: var(--space-xs);
  }

  .form-actions {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  /* Admin card */
  .admin-card {
    background: var(--color-bg);
    padding: var(--space-lg);
    margin-bottom: var(--space-md);
  }

  .admin-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
  }

  .admin-card-title {
    font-size: var(--text-sm);
    font-weight: 700;
  }

  /* Admin table */
  .admin-table {
    width: 100%;
    border-collapse: collapse;
    background: var(--color-bg);
  }

  .admin-table th,
  .admin-table td {
    padding: var(--space-md);
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .admin-table th {
    font-size: var(--text-xs);
    color: var(--color-muted);
    font-weight: 500;
  }

  .admin-table tr:last-child td {
    border-bottom: none;
  }

  .admin-table tr:hover td {
    background: var(--color-bg-alt);
  }

  /* Status badges */
  .status-badge {
    display: inline-block;
    font-size: var(--text-xs);
    padding: var(--space-xs) var(--space-sm);
    border-radius: 2px;
  }

  .status-badge.draft {
    background: #f0f0f0;
    color: #666;
  }

  .status-badge.published {
    background: #e6f4ea;
    color: #137333;
  }

  .status-badge.archived {
    background: #fce8e6;
    color: #c5221f;
  }

  /* Stats grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  .stat-card {
    background: var(--color-bg);
    padding: var(--space-lg);
  }

  .stat-label {
    font-size: var(--text-xs);
    color: var(--color-muted);
    margin-bottom: var(--space-xs);
  }

  .stat-value {
    font-size: var(--text-3xl);
    font-weight: 700;
  }

  /* Action buttons */
  .btn-sm {
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-sm);
  }

  .btn-danger {
    background: #c5221f;
    border-color: #c5221f;
  }

  .btn-danger:hover {
    background: #a31b19;
    border-color: #a31b19;
    color: var(--color-bg);
  }

  .btn-warning {
    background: #f9ab00;
    border-color: #f9ab00;
    color: #000;
  }

  .btn-warning:hover {
    background: #e69c00;
    border-color: #e69c00;
    color: #000;
  }
</style>
