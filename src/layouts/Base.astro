---
import { Font } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
// MVP: Mix functionality gated - uncomment to re-enable
// import PersistentPlayer from '../components/public/PersistentPlayer.astro';
// import { getPublishedMixes } from '../lib/supabase';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'VERBS',
  description = 'Events from VERBS collective'
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.verbsaroundthe.world/';

// MVP: Mix functionality gated - uncomment to re-enable
// const mixes = await getPublishedMixes();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <Font cssVariable="--font-sans" preload />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <!-- SVG noise filter for texture overlay -->
    <svg class="noise-filter" aria-hidden="true">
      <filter id="noise">
        <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="3" stitchTiles="stitch" seed="0">
          <animate attributeName="seed" from="0" to="100" dur="1s" repeatCount="indefinite" />
        </feTurbulence>
        <feColorMatrix type="saturate" values="0" />
      </filter>
    </svg>
    <div class="noise-overlay" aria-hidden="true"></div>

    <!-- MVP: Mix functionality gated - uncomment to re-enable -->
    <!-- <PersistentPlayer mixes={mixes} /> -->
    <slot />
  </body>
</html>

<style is:global>
  /* Noise texture overlay - subtle inkbleed effect */
  .noise-filter {
    position: absolute;
    width: 0;
    height: 0;
  }

  .noise-overlay {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 9999;
    opacity: 0.12;
    mix-blend-mode: overlay;
    filter: url(#noise);
    background: #808080;
  }

  /* Disable on reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .noise-overlay {
      display: none;
    }
  }
</style>

