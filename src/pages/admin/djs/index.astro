---
import Admin from '../../../layouts/Admin.astro';
import { supabaseAdmin } from '../../../lib/supabase';

let djs: any[] = [];
let error = '';
let success = '';

if (supabaseAdmin) {
  const { data } = await supabaseAdmin
    .from('djs')
    .select(`
      *,
      event_djs(
        event:events(id, title, date)
      )
    `)
    .order('name');

  djs = data || [];
}

// Handle form submissions
if (Astro.request.method === 'POST' && supabaseAdmin) {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'create') {
    const { error: insertError } = await supabaseAdmin
      .from('djs')
      .insert({
        name: formData.get('name'),
        instagram_url: formData.get('instagram_url') || null,
        soundcloud_url: formData.get('soundcloud_url') || null,
      });

    if (insertError) {
      error = insertError.message;
    } else {
      success = 'DJ created';
    }
  }

  if (action === 'update') {
    const djId = formData.get('dj_id');
    const { error: updateError } = await supabaseAdmin
      .from('djs')
      .update({
        name: formData.get('name'),
        instagram_url: formData.get('instagram_url') || null,
        soundcloud_url: formData.get('soundcloud_url') || null,
      })
      .eq('id', djId);

    if (updateError) {
      error = updateError.message;
    } else {
      success = 'DJ updated';
    }
  }

  if (action === 'delete') {
    const djId = formData.get('dj_id');
    const { error: deleteError } = await supabaseAdmin
      .from('djs')
      .delete()
      .eq('id', djId);

    if (deleteError) {
      error = deleteError.message;
    } else {
      success = 'DJ deleted';
    }
  }

  // Refresh DJs
  const { data: refreshed } = await supabaseAdmin
    .from('djs')
    .select(`*, event_djs(event:events(id, title, date))`)
    .order('name');
  djs = refreshed || [];
}

function getUpcomingEvents(dj: any) {
  const now = new Date();
  return (dj.event_djs || [])
    .filter((ed: any) => ed.event && new Date(ed.event.date) > now)
    .map((ed: any) => ed.event);
}
---

<Admin title="DJs">
  {error && <p class="error-message mb-lg">{error}</p>}
  {success && <p class="success-message mb-lg">{success}</p>}

  <div class="content-grid">
    <div class="main-content">
      {djs.length > 0 ? (
        <div class="djs-list">
          {djs.map(dj => {
            const upcomingEvents = getUpcomingEvents(dj);
            return (
              <details class="dj-item">
                <summary class="dj-header">
                  <span class="dj-name">{dj.name}</span>
                  <span class="dj-events text-sm text-muted">
                    {upcomingEvents.length} upcoming event{upcomingEvents.length !== 1 ? 's' : ''}
                  </span>
                </summary>

                <div class="dj-details">
                  <form method="POST" class="dj-form">
                    <input type="hidden" name="action" value="update" />
                    <input type="hidden" name="dj_id" value={dj.id} />

                    <div class="form-group">
                      <label class="form-label">Name</label>
                      <input type="text" name="name" value={dj.name} required />
                    </div>

                    <div class="form-group">
                      <label class="form-label">Instagram URL</label>
                      <input type="url" name="instagram_url" value={dj.instagram_url || ''} placeholder="https://instagram.com/..." />
                    </div>

                    <div class="form-group">
                      <label class="form-label">SoundCloud URL</label>
                      <input type="url" name="soundcloud_url" value={dj.soundcloud_url || ''} placeholder="https://soundcloud.com/..." />
                    </div>

                    <div class="form-actions-inline">
                      <button type="submit" class="btn-sm">Save</button>
                      {dj.event_djs.length === 0 && (
                        <button type="submit" name="action" value="delete" class="btn-sm btn-danger" onclick="return confirm('Delete this DJ?')">
                          Delete
                        </button>
                      )}
                    </div>
                  </form>

                  {upcomingEvents.length > 0 && (
                    <div class="dj-upcoming">
                      <p class="text-xs text-uppercase text-muted mb-sm">Upcoming Events</p>
                      <ul class="events-list-small">
                        {upcomingEvents.map((event: any) => (
                          <li>
                            <a href={`/admin/events/${event.id}`}>{event.title}</a>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </details>
            );
          })}
        </div>
      ) : (
        <div class="empty-state">
          <p class="text-muted">No DJs yet</p>
        </div>
      )}
    </div>

    <div class="sidebar">
      <div class="admin-card">
        <div class="admin-card-header">
          <h2 class="admin-card-title">Add DJ</h2>
        </div>

        <form method="POST">
          <input type="hidden" name="action" value="create" />

          <div class="form-group">
            <label class="form-label">Name *</label>
            <input type="text" name="name" required />
          </div>

          <div class="form-group">
            <label class="form-label">Instagram URL</label>
            <input type="url" name="instagram_url" placeholder="https://instagram.com/..." />
          </div>

          <div class="form-group">
            <label class="form-label">SoundCloud URL</label>
            <input type="url" name="soundcloud_url" placeholder="https://soundcloud.com/..." />
          </div>

          <button type="submit" class="mt-md">Add DJ</button>
        </form>
      </div>
    </div>
  </div>
</Admin>

