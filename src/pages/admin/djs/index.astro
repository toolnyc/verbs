---
import Admin from '../../../layouts/Admin.astro';
import { supabaseAdmin } from '../../../lib/supabase';

let djs: any[] = [];
let error = '';
let success = '';

if (supabaseAdmin) {
  const { data } = await supabaseAdmin
    .from('djs')
    .select(`
      *,
      event_djs(
        event:events(id, title, date)
      )
    `)
    .order('name');

  djs = data || [];
}

// Handle delete
if (Astro.request.method === 'POST' && supabaseAdmin) {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'delete') {
    const djId = formData.get('dj_id');
    const { error: deleteError } = await supabaseAdmin
      .from('djs')
      .delete()
      .eq('id', djId);

    if (deleteError) {
      error = deleteError.message;
    } else {
      return Astro.redirect('/admin/djs');
    }
  }
}

function getUpcomingEvents(dj: any) {
  const now = new Date();
  return (dj.event_djs || [])
    .filter((ed: any) => ed.event && new Date(ed.event.date) > now)
    .map((ed: any) => ed.event);
}

function getPastEventsCount(dj: any) {
  const now = new Date();
  return (dj.event_djs || [])
    .filter((ed: any) => ed.event && new Date(ed.event.date) <= now)
    .length;
}
---

<Admin title="DJs">
  {error && <p class="error-message mb-lg">{error}</p>}

  <div class="page-actions">
    <div class="dj-count text-muted">{djs.length} DJ{djs.length !== 1 ? 's' : ''}</div>
    <a href="/admin/djs/new" class="btn-primary">New DJ</a>
  </div>

  {djs.length > 0 ? (
    <div class="djs-list">
      {djs.map(dj => {
        const upcomingEvents = getUpcomingEvents(dj);
        const pastCount = getPastEventsCount(dj);

        return (
          <div class="dj-row">
            <div class="dj-info">
              <h3 class="dj-name">
                <a href={`/admin/djs/${dj.id}`}>{dj.name}</a>
              </h3>
              <div class="dj-links">
                {dj.instagram_url && (
                  <a href={dj.instagram_url} target="_blank" class="text-sm text-muted">Instagram</a>
                )}
                {dj.soundcloud_url && (
                  <a href={dj.soundcloud_url} target="_blank" class="text-sm text-muted">SoundCloud</a>
                )}
              </div>
            </div>

            <div class="dj-events text-sm text-muted">
              {upcomingEvents.length > 0 && (
                <span>{upcomingEvents.length} upcoming</span>
              )}
              {pastCount > 0 && (
                <span>{pastCount} past</span>
              )}
              {upcomingEvents.length === 0 && pastCount === 0 && (
                <span>No events</span>
              )}
            </div>

            <div class="dj-actions">
              <a href={`/admin/djs/${dj.id}`} class="btn-sm secondary">Edit</a>
              {dj.event_djs.length === 0 && (
                <form method="POST" class="inline-form">
                  <input type="hidden" name="action" value="delete" />
                  <input type="hidden" name="dj_id" value={dj.id} />
                  <button type="submit" class="btn-sm btn-danger" onclick="return confirm('Delete this DJ?')">Delete</button>
                </form>
              )}
            </div>
          </div>
        );
      })}
    </div>
  ) : (
    <div class="empty-state">
      <p class="text-muted">No DJs yet</p>
      <a href="/admin/djs/new" class="mt-md">Add your first DJ</a>
    </div>
  )}
</Admin>

<style>
  .page-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
    gap: var(--space-md);
  }

  .btn-primary {
    display: inline-block;
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-fg);
    color: var(--color-bg);
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    font-size: var(--text-sm);
  }

  .btn-primary::after {
    display: none;
  }

  .btn-primary:hover {
    opacity: 0.9;
  }

  .djs-list {
    display: flex;
    flex-direction: column;
    background: var(--color-bg);
  }

  .dj-row {
    display: grid;
    grid-template-columns: 1fr auto auto;
    gap: var(--space-lg);
    align-items: center;
    padding: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
  }

  .dj-row:last-child {
    border-bottom: none;
  }

  .dj-name {
    font-size: var(--text-lg);
    font-weight: 700;
    margin-bottom: var(--space-xs);
  }

  .dj-name a {
    text-decoration: none;
  }

  .dj-name a::after {
    display: none;
  }

  .dj-name a:hover {
    text-decoration: underline;
  }

  .dj-links {
    display: flex;
    gap: var(--space-md);
  }

  .dj-links a::after {
    display: none;
  }

  .dj-events {
    display: flex;
    gap: var(--space-md);
  }

  .dj-actions {
    display: flex;
    gap: var(--space-sm);
  }

  .inline-form {
    display: inline;
  }

  .empty-state {
    background: var(--color-bg);
    padding: var(--space-3xl);
    text-align: center;
  }

  .error-message {
    background: #fce8e6;
    color: #c5221f;
    padding: var(--space-md);
  }

  @media (max-width: 768px) {
    .dj-row {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
    }

    .dj-events,
    .dj-actions {
      justify-self: start;
    }
  }
</style>
